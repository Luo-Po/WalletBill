<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WalletBill" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryVariant">@color/PrimaryVariant</item>
        <item name="colorOnPrimary">@color/OnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Secondary</item>
        <item name="colorSecondaryVariant">@color/SecondaryVariant</item>
        <item name="colorOnSecondary">@color/OnSecondary</item>

<!--        <item name="colorBackground">@color/Background</item>-->
        <item name="colorOnBackground">@color/OnBackground</item>

        <item name="colorSurface">@color/Surface</item>
        <item name="colorOnSurface">@color/OnSurface</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/PrimaryVariant</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="Theme.WalletBill.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WalletBill.AppBarOverlay" parent="ThemeOverlay.Material3.Light" />

<!--    <style name="Theme.WalletBill.Overlay" parent="ThemeOverlay.Material3." />-->

    <style name="Theme.WalletBill.NavigationView" parent="ThemeOverlay.Material3.NavigationView" />
    <style name="Theme.WalletBill.TopBar" parent="Theme.Material3.Light" />

    <style name="Theme.WalletBill.keyboard" parent="ThemeOverlay.Material3.Button">
        <item name="android:background">@drawable/btn_keyboard</item>
        <item name="android:textColor">@color/OnPrimary</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>



</resources>